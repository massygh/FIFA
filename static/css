/* static/css/styles.css */

.carte-joueur {
    position: relative; /* Position relative pour permettre le positionnement absolu de l'avatar */
}

.carte-design {
    position: relative; /* Position relative pour que l'avatar soit positionné par rapport à cet élément */
    display: inline-block; /* Permet à la carte de s'ajuster à la taille de l'image */
}

.avatar {
    position: absolute; /* Position absolue pour superposer l'avatar sur la carte */
    top: 0; /* Position en haut de la carte */
    left: 0; /* Position à gauche de la carte */
    z-index: 1; /* Met l'avatar au-dessus de la carte */
}
